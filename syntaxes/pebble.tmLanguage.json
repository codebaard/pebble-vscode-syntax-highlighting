{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pebble",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"name": "meta.class.python",
			"captures": {
				"1": {
					"name": "storage.type.class.python"
				},
				"2": {
					"name": "entity.name.type.class.python"
				}
			},
			"match": "^\\s*(class)\\s+(([A-Z]\\w*))(:)"
		},
		{
			"name": "support.function.builtin.python",
			"match": "\\b(ask|print|consider|take)\\b"
		},
		{
			"comment": "used for methods",
			"match": "\\b([A-Z]\\w*)(\\()",
			"captures": {
				"1": {
					"name": "meta.function-call.generic.python"
				},
				"2": {
					"name": "source.python"
				}
			}
		},
		{
			"name": "meta.class.python",
			"match": "\\b([A-Z]\\w*)(\\.|'s)",
			"captures": {
				"1": {
					"name": "entity.name.type.class.python"
				},
				"2": {
					"name": "source.python"
				}
			}
		},
		{
			"captures": {
				"1": {
					"name": "entity.name.type.class.python"
				},
				"2": {
					"name": "keyword.operator.assignment.python"
				},
				"3": {
					"name": "comment"
				},
				"4": {
					"name": "entity.name.type.class.python"
				}
			},
			"match": "(\\b[A-Z]\\w*)\\s*(=)\\s*(a|the)*\\s*(new)\\s*"
		},
		{
			"name": "source.python",
			"match": "\\b[A-Z]\\w*\\b"
		},
		{
			"name": "keyword.class.pebble",
			"match": "\\b(class|new)\\b"
		},
		{
			"name": "keyword.operator.logical.python",
			"match": "\\b(and|&&|or|is|not)\\b"
		},
		{
			"name": "variable.language.special.self.python",
			"match": "\\b(it|that|caller)\\b"
		},
		{
			"name": "support.function.builtin.python",
			"match": "\\b(set|to)\\b"
		},
		{
			"name": "comment",
			"match": "\\b(the|a)\\b"
		},
		{
			"match": "\\b\\d+(.?\\d*)?\\b",
			"name": "constant.numeric.python"
		},
		{
			"match": "(%|\\*|\\+|\\-|/)",
			"name": "keyword.operator.arithmetic.python"
		},
		{
			"match": "<(?!<|=)|>(?!<|=|>)|<=|>=|==|!=",
			"name": "keyword.operator.comparison.python"
		},
		{
			"match": "=",
			"name": "keyword.operator.assignment.python"
		},
		{
			"match": "'s",
			"name": "constant.numeric.python"
		},
		{
			"match": "\\b(true|false)\\b",
			"name": "constant.language.python"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pebble",
				"match": "\\b(if|while|for each|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pebble",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pebble",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pebble"
}